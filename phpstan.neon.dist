includes:
  - ./vendor/phpstan/phpstan/conf/bleedingEdge.neon

parameters:
  level: max
  paths:
    - app
    - config
    - database

  # ğŸš« exclusÃµes
  excludePaths:
    - database/migrations/*
    - bootstrap/*
    - storage/*
    - public/*

  # ğŸ” autoload bÃ¡sico (sem bootar a app)
  bootstrapFiles:
    - vendor/autoload.php

  # ğŸ“ trate PHPDoc com cautela (menos falsos positivos)
  treatPhpDocTypesAsCertain: false

  # ğŸ§° objetos "caixa-preta" comuns do Laravel
  universalObjectCratesClasses:
    - Illuminate\Database\Eloquent\Model
    - Illuminate\View\View
    - stdClass

  # ğŸ§  Larastan â€“ checks Ãºteis
  checkModelProperties: true
  # checkModelMagicWhere: true
  # checkModelRelationExistence: true
